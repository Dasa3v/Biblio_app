<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Administraci√≥n de Libros</h1>
        <a href="/books/add" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Nuevo Libro
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Autor</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                <tr>
                    <td><%= book.name %></td>
                    <td><%= book.author %></td>
                    <td>
                        <a href="/books/edit/<%= book.id %>" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/books/delete/<%= book.id %>" class="btn btn-sm btn-danger ms-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>